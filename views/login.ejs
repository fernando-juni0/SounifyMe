    <main>
        <section id="login-containner">
            <div id="login-content">
                <div id="login-img-containner">
                    <img src="../public/img/zyro-image.png" alt="">
                </div>
                <div id="login-form-containner">
                    <h1 id="login-title">Login</h1>
                    <form id="emailFormLogin" action="/auth/email" method="post">
                        <div class="login-input-containner">
                            <label for="email">Email</label>
                            <input type="text" id="email" name="email" placeholder="example@gmail.com">
                        </div>
                        <div class="login-input-containner">
                            <label for="senha">Senha</label>
                            <input type="text" id="senha" name="senha" placeholder="**********************">
                        </div>
                        <div id="forgot-password-containner">
                            <a href="#">Esqueceu sua senha?</a>
                        </div>
                        <div id="button-and-remember-containner">
                            <div id="button-content">
                                <input type="submit" value="Logar" id="logar">
                            </div>
                            <div id="remember-content">
                                <div id="check-content" ><div id="check-circle"></div></div>
                                <span>Lembre de mim</span>
                                <input type="checkbox" name="remember" checked hidden id="remember-input">
                            </div>
                        </div>
                    </form>
                    <div id="create-account-containner">
                        <span>NÃ£o tem uma conta?</span>
                        <a href="/cadastro">Cadastre-se</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="cadastro-containner">

        </section>
    </main>

    <form action="/auth" id="formignore" method="post"><input type="text" id="userAutenticate" name="user" hidden></form>
